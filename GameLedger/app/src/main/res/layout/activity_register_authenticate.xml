<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".RegisterAuthenticateActivity">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="150dp"
		android:text="회원가입"
		android:textSize="35sp" />

	<RadioGroup
		android:id="@+id/emailPhone_radioGroup"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="30dp"
		android:layout_marginHorizontal="100dp"
		android:background="@drawable/outline_style"
		android:orientation="horizontal">

		<RadioButton
			android:id="@+id/phone_auth_radioButton"
			android:checked="true"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="전화번호 인증"
			android:background="@drawable/phone_button_style"
			android:button="null" />

		<RadioButton
			android:id="@+id/email_auth_radioButton"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="이메일 인증"
			android:textColor="@color/gray"
			android:button="null" />
	</RadioGroup>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="30dp"
		android:paddingTop="30dp"
		android:paddingBottom="50dp"
		android:gravity="center"
		android:background="@drawable/outline_style"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="center"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/auth_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginRight="10dp"
				android:text="전화번호 : "
				android:textSize="15sp" />

			<EditText
				android:id="@+id/auth_input"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:minHeight="50dp"
				android:ems="12"
				android:hint="전화번호"
				android:textSize="15sp" />
		</LinearLayout>

		<android.widget.Button
			android:id="@+id/auth_button"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/button_style"
			android:text="요청하기" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="center"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginRight="10dp"
				android:text="인증코드 : "
				android:textSize="15sp" />

			<EditText
				android:id="@+id/authCode_input"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:minHeight="50dp"
				android:ems="7"
				android:hint="인증코드"
				android:textSize="15sp" />

			<android.widget.Button
				android:id="@+id/authCode_button"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:layout_marginLeft="10dp"
				android:background="@drawable/button_style_light"
				android:text="인증하기" />
		</LinearLayout>

	</LinearLayout>

	<android.widget.Button
		android:id="@+id/next_button"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="30dp"
		android:background="@drawable/button_style"
		android:text="다음" />

</LinearLayout>