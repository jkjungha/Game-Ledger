<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_black_space"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- 지출 카테고리별 몬스터 그래픽으로 수정 예정 -->
        <ImageView
            android:id="@+id/iv_quest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/mission"
            app:layout_constraintBottom_toTopOf="@id/LinearLayout3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
                android:id="@+id/LinearLayout_vertical1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_quest"
                app:layout_constraintTop_toTopOf="parent" >

            <TextView
                    android:id="@+id/tv_questCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식비"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                <TextView
                        android:id="@+id/tv_quest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="하루 식비"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/tv_questValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50,000"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="원"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/LinearLayout_vertical2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/LinearLayout_vertical1"
                app:layout_constraintTop_toTopOf="parent" >

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 누적 금액"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/LinearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                <TextView
                        android:id="@+id/tv_accumulatedAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30,000"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="원"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/LinearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_quest"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >
            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/border_achievement_rate"
                    app:layout_constraintTop_toBottomOf="@id/iv_quest"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/confirm_button" />


        </LinearLayout>
        <!-- 달성도 바 그래픽 추가 예정 -->



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>